{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@web/*": [
                "/apps/web/src/*"
            ],
            "@backend/*": [
                "/apps/backend/src/*"
            ],
            "@ui/*": [
                "packages/ui/src/*"
            ]
        },
        "target": "esnext",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "packages/**/*",
        "apps/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}